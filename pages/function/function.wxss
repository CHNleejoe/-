.building-list {
  width: 100%;
  height: 200rpx;
  background: #eee;
  padding-top: 20rpx;
}
.building-list .building-info .building-info-item {
  font-size: 28rpx;
  font-family: PingFang SC;
  line-height: 48rpx;
}
.building-list .building-info .building-btns {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(238, 238, 238, 0.8);
  height: 182rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.building-list .building-info .building-btns .building-btns-item {
  height: 100%;
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  line-height: 40rpx;
  position: relative;
}
.building-list .building-info .building-btns .building-btns-item:hover {
  animation: opac .7s ease;
}
@keyframes opac {
  0% {
    opacity: 1;
  }
  50% {
    opacity: .7;
  }
  100% {
    opacity: 1;
  }
}
.building-list .building-info .building-btns .building-btns-item image {
  width: 140rpx;
  height: 140rpx;
}
.building-list .building-info .building-btns .building-btns-item .building-btns-item-bedge {
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  height: 36rpx;
  width: 36rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 50%;
  font-size: 20rpx;
  font-family: PingFang SC;
  color: #ffffff;
}
.building-list .building-info .building-btns .building-btns-item .building-btns-item-bedge.warn {
  background: #FF1919;
}
.building-list .building-info .building-btns .building-btns-item .building-btns-item-bedge.normal {
  background: #666;
}
