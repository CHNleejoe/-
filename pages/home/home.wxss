.saoma {
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.saoma image {
  width: 240rpx;
  height: 228rpx;
  margin-top: 281rpx;
}
.saoma text {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #666666;
  line-height: 48rpx;
}
.map {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.map > map {
  height: 540rpx;
  width: 100%;
}
.map .warning {
  flex: 1;
  width: 100%;
  overflow: scroll;
}
.map .warning .title {
  height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
  background: white;
}
.map .warning .list {
  padding-left: 30rpx;
  box-sizing: border-box;
  background: white;
}
.map .warning .list .item {
  padding-left: 47rpx;
  padding-top: 16rpx;
  padding-bottom: 8rpx;
  min-height: 180rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
  position: relative;
  line-height: 48rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  transition: all .5s;
}
.map .warning .list .item:active {
  background: #eee;
}
.map .warning .list .item.active {
  background: #eee;
}
.map .warning .list .item > image {
  position: absolute;
  top: 23rpx;
  left: 0;
  width: 27rpx;
  height: 34rpx;
}
.map .warning .list .item .p {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #666666;
  line-height: 40rpx;
}
