.to-sec {
  width: 100%;
  height: 90rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  background: white;
  font-size: 32rpx;
  font-family: PingFang SC;
  text-decoration: underline;
  color: #3091f2;
  line-height: 90rpx;
  text-align: right;
  transition: all .3s;
}
.to-sec:active {
  opacity: .8;
  background: #eee;
}
.saoma {
  width: 150rpx;
  height: 150rpx;
  background: #ebebeb;
  margin: 21rpx 0 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.saoma > image {
  width: 42rpx;
  height: 40rpx;
}
